</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const jazzPlayer = document.getElementById("jazz-player") as HTMLIFrameElement | null; // Typecast to HTMLIFrameElement
    const playBtn = document.getElementById("play-btn");
    const pauseBtn = document.getElementById("pause-btn");
    const resumeBtn = document.getElementById("resume-btn");

    // Play the jazz playlist
    if (playBtn && jazzPlayer) { // Null check for jazzPlayer
      playBtn.addEventListener("click", () => {
        jazzPlayer.src = "https://www.youtube.com/embed/jfKfPfyJRdk?autoplay=1&enablejsapi=1";
      });
    }

    // Pause the jazz playlist
    if (pauseBtn && jazzPlayer) { // Null check for jazzPlayer
      pauseBtn.addEventListener("click", () => {
        jazzPlayer.contentWindow?.postMessage('{"event":"command","func":"pauseVideo","args":""}', '*');
      });
    }

    // Resume the jazz playlist
    if (resumeBtn && jazzPlayer) { // Null check for jazzPlayer
      resumeBtn.addEventListener("click", () => {
        jazzPlayer.contentWindow?.postMessage('{"event":"command","func":"playVideo","args":""}', '*');
      });
    }
  });
</script>