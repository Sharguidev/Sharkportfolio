<style>
  .services-page {
    text-align: center;
    padding: 20px;
  }

  .cards {
    display: grid;
    grid-template-columns: repeat(3, 1fr); /* 3 cards per row */
    gap: 0px; /* Adjust spacing between cards */
    justify-content: center;
  }

  .card {
    border: 1px solid #ddd;
    border-radius: 8px;
    padding: 20px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    height: fit-content;
  }

  .card-title {
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 10px;
  }

  .card-price {
    font-size: 1.2rem;
    color: #588157;
    margin-bottom: 10px;
  }

  .card-description {
    list-style: none;
    padding: 0;
  }

  .card-description li {
    margin-bottom: 5px;
  }

  .btn-rock {
        background-color: #344E41;
        color: #ffffff;
        border: none;
        padding: 10px 10px;
        border-radius: 5px;
        cursor: pointer;
        margin: 0 auto; /* Center the button */
        text-decoration:none;
    }
</style>
