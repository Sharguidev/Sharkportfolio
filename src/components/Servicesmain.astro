---
interface Service {
        title: string;
        description: string;
        icon: string;
    }
    let services : Service[] = [
        {
            title: "Frontend Development",
            description: "I create beautiful, fast, and mobile-friendly websites that make your business stand out online.",
            icon: "fa-solid fa-laptop"
        },
        {
            title: "Backend Development",
            description: "I make sure everything behind your website runs smoothly‚Äîlike contact forms, databases, and user logins‚Äîso your site works perfectly.",
            icon: "fa-solid fa-server"
            
        },
        {
            title: "UI/UX Design",
            description: "I design websites that are easy to use and look great, giving your visitors a smooth and enjoyable experience.",
            icon: "fa-solid fa-paint-brush"
        }
    ];
    import BacktoTop from "./BacktoTop.astro";
---



    <div class="container">
        <div class="greeting mt-5">
            <div class="d-flex">
                <h1 class="dynamic-text hello">
                    Hello
                </h1>
                <span class="emoji">
                    üëãüèæ 
                </span> 
            </div>
            <h1 class="dynamic-text">I‚Äôm Guillermo Obando ‚Äî your next Web Dev partner.</h1> 
            <p class="mt-3 dynamic-text">I craft web experiences that connect and deliver.</p>            
        </div>
        <div class="cards d-flex flex-direction-column justify-content-center align-items-center">
            {services.map((service) =>(
                <div class="card" style="width: 18rem; height: 15rem;">
                    <div class="card-body">
                    <div class="card-icon">
                      <i class={service.icon}></i>
                    </div>
                      <h4 class="card-title mt-3 mb-4" style="font-weight: bold; font-size: 16px; ">{service.title}</h4>
                      <p class="card-text" style="color: grey; font-size: 14px;">{service.description} </p>
                      
                    </div>
                </div>
            ))}
        </div>
        <button onclick="window.location.href='#rock-contact'" class="dynamic-btn">Schedule a free call üì≤</button>
        
    </div>



<style>
   
    @import url('https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap');


    .container {
        margin-top: 2%;
        max-width: 100%;
        font-family: "Inter";
        padding-top: 40px;
    }

    
    
    .greeting h1 {
        font-size: 1.75rem; /* Increase font size */
        font-weight: bold;
        text-align: left;
        margin-left: 3.5%; 
    }
    
    .greeting p{
        margin-left: 3.5%;
    }

    .dynamic-text {
        mix-blend-mode: difference;
        color: rgb(255, 255, 255); /* or black, depending on your design */
        transition: color 0.2s;
    }

    .dynamic-text:hover {
        color: #000000; /* Change color on hover */
        mix-blend-mode: normal;
    }

    .emoji {
        font-size: 1.5rem; /* Adjust emoji size */
        mix-blend-mode: normal;
        position: relative;
        z-index: 1;
    }
    
    
    .cards {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        margin-top: 20px;
        gap: 20px;
    }

    .card{
        width: 20rem;
        margin-left: 20px;
        margin-top: 20px;
        border: none;
        box-shadow: -2px 6px 49px -13px rgba(0,77,38,0.75);
        -webkit-box-shadow: -2px 6px 49px -13px rgba(0,77,38,0.75);
        -moz-box-shadow: -2px 6px 49px -13px rgba(0,77,38,0.75);
        color: rgb(5, 5, 5);
        border-radius: 8px;
    }

    .card-icon {
        font-size: 1.5rem;
        background-color: #84A98C;
        margin-bottom: 10px;
        padding: 15px;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 50px;
        height: 50px;
    }

    .card-body {
        display: flex;
        flex-direction: column; /* Use flexbox for layout */
        align-items: flex-start; /* Align items vertically */
        /* Add spacing between the icon and text */
    }


    .card-text{
        margin-top: -15px;
        text-align: left;
    }

    .dynamic-btn{
        background-color: #344E41;
        mix-blend-mode: normal;
        color: white; /* Green */
        transition: color 0.2s, mix-blend-mode 0.2s;
        border: none; 
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 1rem;
        cursor: pointer;
        text-decoration: none;
    }

    .dynamic-btn[style*="difference"], 
    .dynamic-btn.blend-difference {
    color: white;
    mix-blend-mode: difference;
}

    /* Mobile: up to 700px */
@media (max-width: 700px) {
  .container .greeting {
    text-align: center;
    margin: 10% auto;
  }
  .cards {
    flex-direction: column;
    align-items: center;
    gap: 16px;
  }
  .card {
    width: 90vw;
    margin-left: 0;
    margin-top: 16px;
  }
  .dynamic-btn {
    margin: 10% auto;
    display: block;
    width: fit-content;
    max-width: 320px;
  }
}

/* Tablet: 701px to 1024px */
@media (min-width: 701px) and (max-width: 1024px) {
  .container .greeting {
    text-align: center;
    margin: 5% auto;
  }
  .cards {
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
  }
  .card {
    width: 40vw;
    min-width: 250px;
    max-width: 350px;
    margin-left: 0;
  }
  .dynamic-btn {
    margin: 5% auto;
    display: block;
    width: fit-content;
    max-width: 320px;
  }
}

/* Desktop: 1025px and up */
@media (min-width: 1025px) {
  .container .greeting {
    text-align: left;
    margin: 10% 0 2% 8%;
  }
  .cards {
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
  }
  .card {
    width: 20rem;
    margin-left: 20px;
    margin-top: 20px;
  }
  .dynamic-btn {
    margin: 2% 69% 2% 4%;
    width: fit-content;
    display: inline-block;
  }
  
}
    
</style>

