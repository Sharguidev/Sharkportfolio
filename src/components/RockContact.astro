<script>
    document.addEventListener('input', (event) => {
        const target = event.target as HTMLElement | null; // Explicitly type the target
        if (target && target.tagName.toLowerCase() === 'textarea') {
            const textarea = target as HTMLTextAreaElement; // Narrow the type to HTMLTextAreaElement
            textarea.style.height = 'auto'; // Reset height to calculate new height
