        <style>
           .container-footer {
                width: 100%;
                margin: 0;
                padding-top: 2%;
                box-sizing: border-box;
                background-color: #344E41;
            }

            .pie-pagina {
                width: 100%;
                padding: 0;
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                color: #fff;
                box-sizing: border-box;
            }

            .pie-pagina .grupo-1 {
                width: 100%;
                max-width: 1200px;
                margin-bottom: 20px;
                
                display: grid;
                grid-template-columns: repeat(3, 1fr);
                grid-gap: 20px;
                padding: 0;
            }

            .pie-pagina .grupo-1 .box ul {
                list-style: none;
                padding: 0;
                margin-left: 10%;
            }

            .pie-pagina .grupo-1 .box ul li a{
                text-decoration: none;
                color: white;
                cursor: pointer;
                margin-left: 15%;
            }

            .pie-pagina .grupo-1 .box ul li a:hover{
                color: #898788;
            }

            .pie-pagina .grupo-1 .box figure{
                width: 100%;
                height: 100%;
                display: flex;
                justify-content: center;
                align-items: center;
                margin-left: 5%;
            }

            .pie-pagina .grupo-1 .box figure img{
                
                width: 250px;
            }

            .pie-pagina .grupo-1 .box h2{
                color: #fff;
                margin-bottom: 25px;
                margin-left: 30%;
                font-size: 20px;
            }

            .pie-pagina .grupo-1 .box p{
                color: #efefef;
                margin-bottom: 10px;
            }   

            .pie-pagina .grupo-1 .red-social{
                margin-left: 30%;
            }

            .pie-pagina .grupo-1 .red-social a{
                display: inline-block;
                text-decoration: none;
                width: 45px;
                height: 45px;
                line-height: 45px;
                color: #344E41;
                margin-right: 10px;
                border-radius: 50%;
                background-color: #D9D9D9;
                text-align: center;
                transition: all 300ms ease;
            }

            .pie-pagina .grupo-1 .red-social a:hover{
                color: #817e7e;
            }

            .pie-pagina .grupo-2 {
                width: 100%;
                margin: 0;
                padding: 10px 0;
                display: flex;
                justify-content: space-between;
                align-items: center;
                box-sizing: border-box;
                background-color: black;
            }

            .pie-pagina .grupo-2 small{
                font-size: 15px;
            }

            .dev {
                margin-left: 10%;
                padding-left: 10px;
            }

            .right {
                margin-right: 10%;
                padding-right: 10px;
            }

            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }

            /* Estilos para dispositivos mÃ³viles */
            @media (min-width:370px) and (max-width:800px){
                .pie-pagina .grupo-1{
                    width: 100%;
                    grid-template-columns: 1fr;
                    grid-gap: 30px;
                    padding: 35px 0px;
                }

               

                .pie-pagina .grupo-1 .box ul{
                    margin-left: 30%;
                    padding: 0;
                }
                .pie-pagina .grupo-1 .red-social{
                    margin-left: 30%;
                }

                .pie-pagina .grupo-2 {
                    display : flex;
                    flex-direction: column;
                    

                    
                }
                .pie-pagina .grupo-2 .dev{
                    margin-right: 8%;
                    
                }

                .pie-pagina .grupo-2 .right{
                    margin-left: 15%;
                }
            }
        </style>

