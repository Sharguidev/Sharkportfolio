        <style>
           .container-footer {
                position: absolute;
                width: 100%;
                margin: 0 auto;
            }

            .pie-pagina{
                width: 100%;
                background-color: #344E41;
                color: #fff;
            }

            .pie-pagina .grupo-1{
                width: 100%;
                max-width: 1200px;
                margin: 0 auto 0 10%; 
                display: grid;
                grid-template-columns: repeat(3, 1fr);
                grid-gap: 50px;
                padding: 45px 0px;
            }

            .pie-pagina .grupo-1 .box ul {
                list-style: none;
                padding: 0;
                margin-left: 20%;
            }

            .pie-pagina .grupo-1 .box ul li a{
                text-decoration: none;
                color: white;
                cursor: pointer;
            }

            .pie-pagina .grupo-1 .box ul li a:hover{
                color: #fcc0c5;
            }

            .pie-pagina .grupo-1 .box figure{
                width: 100%;
                height: 100%;
                display: flex;
                justify-content: center;
                align-items: center;
            }

            .pie-pagina .grupo-1 .box figure img{
                
                width: 250px;
            }

            .pie-pagina .grupo-1 .box h2{
                color: #fff;
                margin-bottom: 25px;
                margin-left: 20%;
                font-size: 20px;
            }

            .pie-pagina .grupo-1 .box p{
                color: #efefef;
                margin-bottom: 10px;
            }   

            .pie-pagina .grupo-1 .red-social{
                margin-left: 20%;
            }

            .pie-pagina .grupo-1 .red-social a{
                display: inline-block;
                text-decoration: none;
                width: 45px;
                height: 45px;
                line-height: 45px;
                color: #344E41;
                margin-right: 10px;
                border-radius: 50%;
                background-color: #D9D9D9;
                text-align: center;
                transition: all 300ms ease;
            }

            .pie-pagina .grupo-1 .red-social a:hover{
                color: #817e7e;
            }

            .pie-pagina .grupo-2{
                background-color: #000000;
                padding: 15px 10px;
                color: #ffffff;
                display: flex;
                justify-content: space-between;
            }

            .pie-pagina .grupo-2 small{
                font-size: 15px;
            }

            .dev{
                margin-left: 5%;
            }
            .right{
                margin-right: 5%;
            }

            /* Estilos para dispositivos mÃ³viles */
            @media screen and (max-width:800px){
                .pie-pagina .grupo-1{
                    width: 90%;
                    grid-template-columns: repeat(1, 1fr);
                    grid-gap: 30px;
                    padding: 35px 0px;
                }
            }
        </style>

