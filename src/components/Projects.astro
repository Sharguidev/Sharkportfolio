        {
            title: "Roomies",
            description: "This was a project made for new college students to find a roommate or to find a room to rent in a non-expensive community.",
            additionalDescription: "  Astro, HTML, CSS, JavaScript, and React.",
            img: ""
        },
        {
            title: "Backend Development",
            description: "I will help you with the backend of your website using",
            additionalDescription: "FlaskAPI, PostgreSQL, and SQLAlchemy.",
            img: ""
            
        },
        {
            title: "UI/UX Design",
            description: "Designing intuitive and engaging user interfaces using",
            additionalDescription: " Figma",
            img: ""
        }
    ];
---



    <div class="container" id="projects">
        <div class="greeting mt-5">
                <h1>Latest Projects </h1> 
                <p >I'm always working in exciting projects</p>            
        </div>
        <div class="cards d-flex flex-direction-column justify-content-center align-items-center">
            {services.map((service) =>(
                <div class="card" style="width: 18rem; ">
                    <img src={service.img} class="card-img-top" alt="...">
                    <div class="card-body">
                    
                      <h4 class="card-title mt-3 mb-4" style="font-weight: bold; font-size: 16px; ">{service.title}</h4>
                      <p class="card-text" style="color: grey; font-size: 14px;">{service.description} <span style="color: #344E41;">{service.additionalDescription}</span> </p>
