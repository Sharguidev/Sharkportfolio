---
interface Service {
        icon: string;
        title: string;
        description: string;
        
        
    }
     const services : Service[] = [
         {
             icon: "fa-solid fa-glasses",
             title: "1:1 Exploration",
             description: "We meet to understand your business, goals, and what you want to achieve online."
             
             
         },
        {
            icon: "fa-solid fa-palette",
            title: "Strategic Design",
            description: "We create a visual concept and style that reflects your brand and engages your audience."
        
            
        },
        {
            icon: "fa-solid fa-laptop-code",
            title: "Development & Optimization",
            description: "I build your website with clean, fast code optimized for search engines."
        },
        {
            icon: "fa-brands fa-space-awesome",
            title: "Launch + Training",
            description: "We publish your site and I teach you how to manage it without depending on others."
        },
    ];
---



<div class="container" id="services">
  <div class="greeting">
      <h1>From idea to launch</h1> 
      <p>Turning your vision into a professional, high-performing website.</p>            
  </div>
  <div class="cards">
      {services.map((service, index) => (
          <div class={`card-step ${index < services.length - 1 ? 'with-arrow' : ''}`}>
              <div class="card" style="width: 20rem;">
                  <div class="card-body">
                      <div class="card-icon">
                          <i class={service.icon}></i>
                      </div>
                      <h4 class="card-title mt-3 mb-2">{service.title}</h4>
                      <p class="card-text">{service.description}</p>
                  </div>
              </div>
          </div>
      ))}
  </div>
  <button onclick="window.location.href='/ServicesP'" class="btn-reach">Start Your ProjectüíÜüèæ</button>
</div>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap');


    .container {
        max-width: 100%;
        font-family: "Inter";
        height: fit-content;
        /* max-height: 100vh;
        overflow: auto; */
        background-color: rgba(163, 177, 138, 0.3); /* Color verde con 80% de opacidad */   
        position: relative;
        padding-top: 10px;
        padding-bottom: 80px;
        margin-top: 20px;
    }

    .greeting h1 {
        text-align: end;
        font-size: 1.75rem; 
        font-weight: bold;
        margin-right: 11%;
        padding-top: 3%;
    }    


    .greeting p {
        text-align: end;
        margin-right: 11%;
    }

    .cards {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        margin-top: 20px;
        gap: 20px;
    }
    .card-step {
        position: relative;
    }

    .card-step.with-arrow::after {
        content: "\f061"; /* Font Awesome arrow-right unicode */
        font-family: "Font Awesome 6 Free";
        font-weight: 900;
        position: absolute;
        right: -35px;
        top: 50%;
        transform: translateY(-50%);
        font-size: 2rem;
        color: #344E41;
    }

    .card:hover {
      transform: scale(1.05);
    }

    .card{
        width: 20rem;
        height: fit-content;
        margin-left: 20px;
        margin-top: 20px;
        border: none;
        box-shadow: -2px 6px 49px -13px rgba(0,77,38,0.75);
        -webkit-box-shadow: -2px 6px 49px -13px rgba(0,77,38,0.75);
        -moz-box-shadow: -2px 6px 49px -13px rgba(0,77,38,0.75);
        color: rgb(5, 5, 5);
        border-radius: 8px;
    }

    .card-icon {
        font-size: 3rem;
        background-color: #84A98C;
        margin-bottom: 10px;
        padding: 40px;
        border-radius: 50%;
        margin: 0 auto;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 50px;
        height: 50px;
    }



    .card-body {
        display: flex;
        flex-direction: column; /* Use flexbox for layout */
        align-items: center; /* Align items vertically */
        /* Add spacing between the icon and text */
    }

    


    .btn-reach {
        text-decoration: none;
        background-color: #344E41;
        color: #ffffff;
        /* margin-top: 10%; */
        border: none;
        padding: 10px;
        width: fit-content;;
        border-radius: 5px;
        margin: 5% 3% 0 71%;

    }

         /* Mobile: up to 700px */
@media (max-width: 700px) {
  .container .greeting{
    text-align: center;
    margin: 5% auto 0 auto;
  }
  
  .cards {
    flex-direction: column;
    align-items: center;
    gap: 16px;
  }
  .card {
    width: 90vw;
    margin-left: 0;
    margin-top: 16px;
  }

  .btn-reach {
    width: fit-content;
    max-width: 320px;
    margin: 10% auto;
  }
  .card-step.with-arrow::after{
    transform: rotate(90deg);
    right: 46%;
    top: 100%;
    font-size: 1.3rem;
  }
}

/* Tablet: 701px to 1024px */
@media (min-width: 701px) and (max-width: 1024px) {
  .container .greeting {
    text-align: center;
    margin: 5% auto;
  }
  .greeting h1, .greeting p{
    text-align: center;
    margin: 0 auto;
  }
  .cards {
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
  }
  .card {
    width: 40vw;
    min-width: 250px;
    max-width: 350px;
    margin-left: 0;
  }
  .btn-reach {
    margin: 10% auto;
    display: block;
    width: fit-content;
    max-width: 320px;
  }
  .card-step.with-arrow::after{
    display: none;
  }
  
  
}

/* Desktop: 1025px and up */

</style>

